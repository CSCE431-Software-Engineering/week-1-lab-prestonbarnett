<h1>Books</h1>

<% content_for :alert_content do %>
  <% notice %>
<% end %>

<%= render("alert") %>

<div class="card">
  <div class="card-body">
    <% if @books.present? %>
      <div id="books">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th scope="col">Title</th>
              <th scope="col">Author</th>
              <th scope="col">Price</th>
              <th scope="col">Pages</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr class="align-middle">
                <td>
                  <i class="bi bi-book"></i>
                </td>
                <td>
                  <strong><%= book.title %></strong>
                </td>
                <td><%= get_field(book, 'author') %></td>
                <td><%= number_to_currency(book.price) %></td>
                <td><%= get_field(book, 'pages') %></td>
                <td>
                  <%= link_to("View Book", book, class: "btn btn-primary") %>
                </td>
              </tr>
            <% end %>
        </table>
      </div>
    <% else %>
      <p>There are no books yet.</p>
    <% end %>

    <div>
      <%= link_to("New book", new_book_path, class: "btn btn-success") %>
    </div>
  </div>
</div>
